<%# app/views/shared/_author.html.erb %>
<li class="group relative flex items-center justify-between py-6">
  <div class="flex items-center overflow-hidden mr-4">
  <%# FIXME: This is a temporary fix for the avatar issue.

  %>
    <img alt="<%= author.name %>"
         src="<%= avatar_url(author, 280) %>"
         srcset="
           <%= avatar_url(author, 480) %> 480w,
           <%= avatar_url(author, 800) %> 800w,
           <%= avatar_url(author, 1200) %> 1200w
         "
         sizes="
           (max-width: 599px) 480px,
           (max-width: 1199px) 800px,
           1200px
         "
         class="inline-block h-8 w-8 flex-shrink-0 object-cover mr-3 rounded-full sm:h-12 sm:w-12 lg:h-14 lg:w-14">
    <p class="truncate whitespace-normal text-lg font-semibold text-secondary-900 sm:text-xl sm:ml-5 lg:text-2xl">
      <%= link_to author_path(author.slug), class: "", data: { umami_event: "Clicked Link", umami_href: author_path(author.slug) } do %>
        <%= author.name %><span class="absolute inset-0" aria-hidden="true"></span>
      <% end %>
    </p>
  </div>
  <p class="flex-shrink-0 text-base font-semibold text-secondary-500 ml-auto group-hover:text-secondary-900 sm:text-lg lg:text-xl"><%= author.posts.count %> posts</p>
  <svg class="h-6 w-6 flex-shrink-0 text-secondary-500 ml-4 group-hover:text-secondary-900" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
    <polyline points="9 18 15 12 9 6"></polyline>
  </svg>
</li>
