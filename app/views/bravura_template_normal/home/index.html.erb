<!-- app/views/bravura_template_normal/home/index.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title><%= publication_name %></title>
</head>
<body class="<%= dark_mode? ? 'dark-mode' : 'light-mode' %>">
  <header>
    <div class="logo-text"><%= logo_text %></div>
    <% if show_cta_button? %>
      <button class="cta-button"><%= cta_button_text %></button>
    <% end %>
  </header>

  <main>
    <% if comments_enabled? %>
      <section class="comments-section">
        <!-- Comments would go here -->
      </section>
    <% end %>

    <% if site_search_enabled? %>
      <div class="search-bar">
        <!-- Search bar would go here -->
      </div>
    <% end %>
  </main>

  <footer>
    <div class="copyright"><%= footer_copyright %></div>
    <div class="social-links">
      <% social_links.each do |platform, url| %>
        <a href="<%= url %>"><%= platform.to_s.capitalize %></a>
      <% end %>
    </div>
  </footer>
</body>
</html>