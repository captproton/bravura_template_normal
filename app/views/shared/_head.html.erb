<%# app/views/shared/_head.html.erb %>

<%= content_tag :title, @page_title %>
<link rel="icon" type="image/png" href="<%= favicon_url %>">
<!-- meta -->
<%= tag.meta charset: "utf-8" %>
<%= tag.meta name: "viewport", content: "width=device-width,initial-scale=1" %>
<%= tag.meta name: "twitter:card", content: "summary_large_image" %>
<%= tag.meta property: "og:type", content: "website" %>
<%= tag.meta property: "og:locale", content: (all_settings[:general]&.open_graph_locale.presence || "en_US") %>
<%= tag.meta name: "robots", content: "index,follow" %>
<%= tag.meta name: "description", content: @meta_description %>
<%= tag.meta property: "og:title", content: @meta_title %>
<%= tag.meta property: "og:description", content: @meta_description %>
<%= tag.meta property: "og:url", content: @article_url %>
<%= tag.meta property: "og:image", content: @article_cover_image_url %>
<%= tag.meta property: "og:image:alt", content: @article_excerpt %>
<%= tag.meta property: "og:site_name", content: all_settings[:navigation]&.logo_text %>
<%= csrf_meta_tags %>

<!-- links -->
<link rel="preconnect" href="https://fonts.bunny.net" />
<link rel="stylesheet" href="https://fonts.bunny.net/css?family=inter:100,200,300,400,500,600,700,800,900&amp;display=swap" />
<link rel="canonical" href="<%= request.base_url %>" />

  <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>
<style>
  :root {
    --headings-font-family: <%= all_settings[:design]&.font_family %>, sans-serif, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    --content-font-family: <%= all_settings[:design]&.font_family %>, sans-serif, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  }
</style>

<!-- Include other styles as needed -->